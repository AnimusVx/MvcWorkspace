
@model IEnumerable<Expense>
@{
    ViewData["Title"] = "Expense Categories";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <div class = "row">
                <div>
                <h2 class="text-primary text-uppercase" >@ViewBag.catName</h2>
                <label>Amount Count: @ViewBag.Amounts</label>
            </div>
            </div>
            
        </div>
    </div>
    <br />

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="align-middle text-primary">
                    <th>
                        Expense
                    </th>
                    <th>
                        Amount
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expense in Model)
                {
                <tr class="align-middle">
                    <td width="20%">@expense.ExpenseName</td>
                    <td width="20%">@expense.Amount</td>
                </tr>
                }
            </tbody>
        </table> 

</div>
